.nav-bar
    %a.logo{:href => "/"}
        %img{:src => "../images/erisyon-logo.svg"}
    .buttons
        %a.menu{:href => "javascript:toggleMenu()"}    
        - data.sections.items.each do |section|
            %a.nav-button{:class => ("current" if current_page.data.section == section[:name]), :href => section[:url]}
                = section[:name]